<launch>
  <!-- Action to load, can be set through command line with "file:=example") -->
  <arg name="file" default="" />
  <arg name="directory" default="$(find free_gait_python)/actions" />
  
  <node pkg="free_gait_python" type="action_from_file.py" name="free_gait_action_from_file" output="screen">
  	<param name="directory" value="$(arg directory)" />
  	<param name="file" value="$(arg file)" />
  	<rosparam command="load" file="$(find free_gait_python)/config/action_from_file.yaml" />
  	
  	<!-- Hack to make it compatible with Locomotion Controller user interface -->
  	<remap from="/free_gait_action_from_file/list_actions" to="/FreeGaitRos/get_available_modes"/>
  	<remap from="/free_gait_action_from_file/send_action" to="/FreeGaitRos/go_to_mode"/>
  	
  </node>
</launch>